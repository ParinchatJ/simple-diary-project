<!DOCTYPE html>
<html lang="en">
<head>
    {{>baseHead}}
    <title>Myspace</title>
</head>
<body>
    <div class="main-container-body">
        {{>header}}
        <div class="container-msp">
            {{#each user as |user|}}
                <h2>Hello {{user.name}}</h2>         
                <span>
                    <p>GOAL : {{user.goal}}</p>
                    <p>INSPIRATION : {{user.inspiration}}</p>
                </span>
            {{/each}}
            <hr class="dot"></hr>
        </div>

        

            {{!-- เอาปุ่มแก้และลบมาใส่ตรงนี้ ตอนทำ css  --}}
        <div class="container-post">
            <h2 class="mydiary-head">MyDiary</h2> 
            {{#each post3ID as |post3ID|}}
            <div class="box-post">
                <div class="head-post">
                        <h4 class="head-post-msp">{{post3ID.name}}</h4>
                        <div class="button-ud">
                            <a href="/post/update/{{ this.id }}"><img src="/static/edit.png" style="height: 15px;" alt=""></a>
                            <a href="/post/delete/{{ this.id }}"><img src="/static/delete.png" style="height: 15px;" alt=""></a>
                        </div>

                    </div>
                <p class="data-post">
                    <span>{{post3ID.date}}</span><br>
                    <span>{{post3ID.topic}}</span><br>
                    <span>{{post3ID.tell_story}}</span>
                </p>
            </div>
            {{/each}}
        </div>

    </div>
    {{>footer}}
</body>
</html>