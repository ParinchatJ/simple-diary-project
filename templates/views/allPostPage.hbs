<!DOCTYPE html>
<html lang="en">
<head>
    {{>baseHead}}
    <title>Home</title>
</head>
<body>
    <div class="main-container-body">
        {{>header}}
        <div class="container-post">
            {{!-- loop all post --}}
            {{#each allPosts}}
                <div class="box-post">
                    <div class="head-post">
                        <h4><a href="/post/{{ this._doc._id }}">{{this._doc.name}}</a></h4>
                        <div class="button-ud">
                            <a href="/post/update/{{ this._doc._id }}"><img src="/static/edit.png" style="height: 15px;" alt=""></a>
                            <a href="/post/delete/{{ this._doc._id }}"><img src="/static/delete.png" style="height: 15px;" alt=""></a>
                        </div>

                    </div>
                    <p class="data-post">
                        <span>Date : {{this.datePostFormat}}</span><br>
                        <span>Topic : {{this._doc.topic}}</span>
                    </p>
                </div>
            {{/each}}
        </div>
        {{>footer}}
    </div>
</body>
</html>